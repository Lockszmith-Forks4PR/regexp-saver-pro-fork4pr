{
	"name": "regexp-saver",
	"displayName": "RegExp Saver",
	"description": "Save regular expressions to quickly re-use for find and replace",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.replaceInSelection",
		"onCommand:extension.replaceInFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
			"command": "extension.replaceInSelection",
			"title": "RegExp Saver: Replace in Selection"
		}, {
			"command": "extension.replaceInFile",
			"title": "RegExp Saver: Replace in File"
		}],
		"configuration": {
			"title": "RegExp Saver",
			"properties": {
				"regExpSaver.saved": {
					"type": "array",
					"default": [],
					"description": "Saved regular expressions to re-use",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"regExp": {
								"type": "string"
							},
							"replacePattern": {
								"type": "string"
							},
							"regExpFlags": {
								"type": "string",
								"default": "g"
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
